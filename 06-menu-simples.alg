algoritmo "MenuSimples"
var
   opcao: inteiro
inicio
   escreval("1 - Novo Cadastro")
   escreval("2 - Listar Dados")
   escreva("Escolha uma opção: ")
   leia(opcao)
   escreval("Opção escolhida: ", opcao)
fimalgoritmo
